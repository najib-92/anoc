<form method="post" action="{{ path('races_delete', {'raceid': race.raceid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ race.raceid) }}">
    <button class="btn">Delete</button>
</form>
