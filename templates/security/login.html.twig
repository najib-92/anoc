                <span class="txt1 p-b-11">
						Email
					</span>

                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <i><img src="{{ asset('assets/images/lock (1).png') }}"
                            style="width:50px;height:50px;margin:0; padding: 10px;text-align: center;"></i>
                    <input class="input100 keyboardInput" value="{{ last_username }}" required data-parsley_patter = "^[a-zA-zA]+$" data-parsly-trigger="keyup" type="email" name="email" vki_attached="true"
                           autofocus>
                    <span class="focus-input100"></span>
                </div>
                <span class="txt1 p-b-11">
