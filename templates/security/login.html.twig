                    <input id ="mac" class="macc" type="text" name="mac" style="width: 75%;height : 5%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 1px solid #ccc;border-radius: 4px;"
                           placeholder="00:00:00:00:00:00">
                    <span class="focus-input100"></span>
                </div>
                {% endif %}
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <div class="container-login100-form-btn">
                    <input type="submit" class="btn login100-form-btn"
                           value="Se connecter">


                </div>
                <input  name="attempt" type = "hidden" id = "attempt" value="{{ attempt }}">

